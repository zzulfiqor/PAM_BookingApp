<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="115dp"
    android:layout_marginEnd="8dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="150dp"
        android:layout_height="115dp">

        <ImageView
            android:id="@+id/image_ruang_semnas"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/ruang_dummy"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/kapsitas_ruang_semnas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/background_purple_rounded"
            android:paddingHorizontal="3dp"
            android:text="100 kapasitas"
            android:textColor="@color/white"
            android:textSize="4pt"
            app:layout_constraintBottom_toTopOf="@+id/nama_ruang_semnas"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/nama_ruang_semnas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Nama Ruangan"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="5pt"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_ruang_semnas" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>